    <script src="https://masonry.desandro.com/masonry.pkgd.js"></script>
    <script type="text/javascript">
      $(document).ready(function(){
        $('.how-to-donate-btn').click(function(){
          $('#popup .modal-body').html($(this).parent().parent().find('.how-to-donate').html());
          $('#popup .modal-title').html($(this).parent().parent().find('.org-name').html());

          $('#popup').modal('show');

          return false;
        });

        $('.contact-info-btn').click(function(){
          $('#popup .modal-body').html($(this).parent().parent().find('.contact-info').html());
          $('#popup .modal-title').html($(this).parent().parent().find('.org-name').html());

          $('#popup').modal('show');

          return false;
        });

        $('.donations').masonry({
          // set itemSelector so .grid-sizer is not used in layout
          itemSelector: '.col-md-4',
          // use element for option
          // columnWidth: '.grid-sizer',
          percentPosition: true
        })
      });
    </script>
