   <script type="text/javascript">
      function fix_height() {
        var live_update = $('.live-update').height();
        var preventions = $('.preventions').height();

        if ($(window).height() > 800) {
          if (live_update > preventions) {
            $('.preventions').css({height: live_update+'px'});
          } else {
            $('.live-update').css({height: preventions+'px'});
          }
        }
      }

      $(document).ready(function(){
        fix_height();

        $('.right_button').click(function(){
          $('.the_answer .wrong_answer').show();
          $('.right_or_wrong').hide();
          $('.the_answer').fadeIn();

          return false;
        });

        $('.wrong_button').click(function(){
          $('.the_answer .right_answer').show();
          $('.right_or_wrong').hide();
          $('.the_answer').fadeIn();

          return false;
        });
      });

      $(window).resize(function(){
        fix_height();
      });
    </script>
  </body>
</html>
